<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="8dp"
        android:orientation="horizontal"
        android:layout_margin="8dp"
        android:background="@android:color/white"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="80dp"
            android:id="@+id/img_cart_product"
            android:layout_height="80dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:id="@+id/txt_cart_product_name"
                android:text="Coffee"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_weight="3"
                android:layout_height="wrap_content">
                
                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:layout_width="50dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/txt_count"
                    android:layout_marginRight="5dp"
                    android:background="@color/colorAccent"
                    android:layout_height="30dp">
                </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/edt_comment"
        android:hint="Comment"
        android:minLines="2"
        android:lines="1"
        android:background="@android:color/white"
        android:layout_margin="8dp"
        android:padding="4dp"
        android:inputType="textMultiLine"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="Choose Size"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="Required"
                    android:background="@drawable/text_round_gray"
                    android:textColor="@android:color/white"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content" />
                
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:background="@android:color/white"

                android:layout_height="wrap_content">

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:id="@+id/rdi_sizeM"
                        android:text="Size M"
                        android:layout_height="wrap_content" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:id="@+id/rdi_sizeL"
                        android:text="Size L"
                        android:layout_height="wrap_content" />
                </RadioGroup>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginRight="8dp"
                        android:textSize="16dp"
                        android:layout_alignParentRight="true"
                        android:text="+$0"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginRight="8dp"
                        android:textSize="16dp"
                        android:layout_alignParentRight="true"
                        android:text="+$3"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="Choose Sugar"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="Required"
                    android:background="@drawable/text_round_gray"
                    android:textColor="@android:color/white"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:background="@android:color/white"

                android:layout_height="wrap_content">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:id="@+id/rdi_sugar_100"
                        android:text="100%"
                        android:layout_height="wrap_content" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:id="@+id/rdi_sugar_70"
                        android:text="70%"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:id="@+id/rdi_sugar_50"
                        android:text="50%"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:id="@+id/rdi_sugar_30"
                        android:text="30%"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:id="@+id/rdi_sugar_free"
                        android:text="free"
                        android:layout_height="wrap_content" />
                </RadioGroup>



            </RelativeLayout>

            <!-- group 3 Ice-->

             <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="Choose Ice"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="Required"
                    android:background="@drawable/text_round_gray"
                    android:textColor="@android:color/white"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:background="@android:color/white"

                android:layout_height="wrap_content">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:id="@+id/rdi_ice_100"
                        android:text="100%"
                        android:layout_height="wrap_content" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:id="@+id/rdi_ice_70"
                        android:text="70%"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:id="@+id/rdi_ice_50"
                        android:text="50%"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:id="@+id/rdi_ice_30"
                        android:text="30%"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:id="@+id/rdi_ice_free"
                        android:text="free"
                        android:layout_height="wrap_content" />
                </RadioGroup>



            </RelativeLayout>



            //Topppingg

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="Topping"
                    android:layout_height="wrap_content" />

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:id="@+id/recycler_topping"
                    android:background="@android:color/white"
                    android:layout_height="match_parent">
                </android.support.v7.widget.RecyclerView>


            </RelativeLayout>


        </LinearLayout>

    </ScrollView>
</LinearLayout>