<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_margin="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:layout_height="wrap_content">
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="120dp"
                android:id="@+id/img_product"
                android:layout_height="120dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/txt_cart_product_name"
                    android:text="Coffee"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:id="@+id/txt_cart_product_price"
                    android:text="$3.25"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/text_round"
                    android:layout_marginTop="7dp"
                    android:padding="4dp"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="2"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="13dp"
                        android:textStyle="italic"
                        android:layout_weight="1"
                        android:id="@+id/txt_sugar"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="7dp"
                        android:text="Sugar:100%"
                        android:padding="4dp"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="13dp"
                        android:textStyle="italic"
                        android:layout_marginTop="7dp"
                        android:layout_weight="1"
                        android:id="@+id/txt_ice"
                        android:text="Ice:100%"
                        android:padding="4dp"
                        android:layout_height="wrap_content" />



                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:text="Topping Extra"
            android:layout_height="wrap_content" />


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:layout_height="wrap_content">
        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:textStyle="italic"
            android:text="Milk Cream"
            android:id="@+id/txt_topping_extra"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>